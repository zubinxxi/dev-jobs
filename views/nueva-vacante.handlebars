<main class="contenedor">
    <form action="/vacantes/nueva" method="post" class="default-form">
        <h3>Información General</h3>

        <div class="campo">
            <label for="titulo">Titulo</label>
            <input type="text" name="titulo" id="titulo" placeholder="Ej: React Developer" required>
        </div>

        <div class="campo">
            <label for="empresa">empresa</label>
            <input type="text" name="empresa" id="empresa" placeholder="Escriba el nombre de la empresa" required>
        </div>

        <div class="campo">
            <label for="ubicacion">Ubicación</label>
            <input type="text" name="ubicacion" id="ubicacion" placeholder="Ej: Panamá, Rio Abajo o remoto" required>
        </div>

        <div class="campo">
            <label for="salario">salario (USD)</label>
            <input type="text" name="salario" id="salario" placeholder="En dólares Ej: $500 USD" required>
        </div>

        <div class="campo">
            <label for="contrato">contrato</label>
            <select name="contrato" id="">
                <option value="" disable selected> -- Selecciona -- </option>
                <option value="Freelance">Freelance</option>
                <option value="Tiempo Completo">Tiempo Completo</option>
                <option value="Medio Tiempo">Medio Tiempo</option>
                <option value="Por Proyecto">Por Proyecto</option>
            </select>
        </div>

        <h3>Descripción del Puesto</h3>
        <div class="campo descripcion">
            <label for="">Descripción</label>
            <input type="hidden" name="descripcion" id="x" required>
            <trix-editor input="x"></trix-editor>
        </div>

        <h3>Conocimientos</h3>
        <ul class="lista-conocimientos">
            {{#seleccionarSkills a}}
            {{/seleccionarSkills}}
        </ul>

        <div class="campo centrar-horizontal">
            <input type="hidden" name="skills" id="skills">
            <input type="submit" value="Publicar" class="btn btn-azul">
        </div>

        

    </form>
</main>